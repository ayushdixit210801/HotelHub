<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center my-5">
	<div class="row">
		<div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
			<div class="card shadow">
				<img
					src="https://images.pexels.com/photos/189296/pexels-photo-189296.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
					alt=""
					class="card-img-top shadow-lg"
					crossorigin="anonymous" />
				<div class="card-body">
					<h4 class="card-title">Login</h4>
					<form action="/login" method="POST" class="validated-form" novalidate>
						<div class="mb-3">
							<label class="form-label" for="username">Username</label>
							<input class="form-control" type="text" id="username" name="username" required />
							<div class="valid-feedback">Looks good!</div>
						</div>

						<div class="mb-3">
							<label class="form-label" for="password">Password</label>
							<input class="form-control" type="password" id="password" name="password" required />
							<div class="valid-feedback">Looks good!</div>
						</div>
						<div class="d-grid">
							<button class="btn btn-success btn-block">Login</button>
						</div>
						<div class="text-center mt-3">
							<p>Don't have an account? <a class="fw-bold" href="/register">Register</a></p>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
