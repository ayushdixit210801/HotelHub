<% layout('layouts/boilerplate')%>
<div class="container d-flex justify-content-center align-items-center mb-5 mt-3">
	<div class="row">
		<div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
			<div class="card shadow">
				<img
					src="https://images.pexels.com/photos/161758/governor-s-mansion-montgomery-alabama-grand-staircase-161758.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
					alt=""
					class="card-img-top shadow-lg" />
				<div class="card-body">
					<h5 class="card-title">Register</h5>
					<form action="/register" method="POST" class="validated-form" novalidate>
						<div class="mb-3">
							<label class="form-label" for="username">Username</label>
							<input class="form-control" type="text" id="username" name="username" required autofocus />
							<div class="valid-feedback">Looks good!</div>
						</div>
						<div class="mb-3">
							<label class="form-label" for="email">Email</label>
							<input class="form-control" type="email" id="email" name="email" required />
							<div class="valid-feedback">Looks good!</div>
						</div>
						<div class="mb-3">
							<label class="form-label" for="password">Password</label>
							<input class="form-control" type="password" id="password" name="password" required />
							<div class="valid-feedback">Looks good!</div>
						</div>
						<div class="d-grid">
							<button class="btn btn-success">Register</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
